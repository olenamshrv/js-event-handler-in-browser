<page class='page'>

  <form class='form' id='form'>
    <img
      height='160px'
      width='100%'
      src='https://picsum.photos/1200/1200'
      alt='Form image'
      class='form__image'
    />

    <h1 class='form__title'>Реєстрація користувача</h1>

    <div class='form__group'>
      <label for='username' class='form__label'>Ім'я
        користувача</label>
      <input
        type='text'
        class='form__input'
        id='username'
        name='username'
        required
      />
      <span
        class='form__button--save'
        operator='-'
        value='10'
      >Save</span>
    </div>

    <div class='form__group'>
      <label for='email' class='form__label'>Email</label>
      <input
        type='email'
        class='form__input'
        id='email'
        name='email'
        required
      />
    </div>

    <div class='form__group'>
      <label for='age' class='form__label'>Age</label>
      <input
        type='number'
        class='form__input'
        id='age'
        name='age'
        required
      />
      <span
        class='form__button--add'
        operator='+'
        value='10'
      >+10</span>
      <span
        class='form__button--add'
        operator='-'
        value='10'
      >-10</span>
    </div>

    <div class='form__group'>
      <label for='role' class='form__label'>Оберіть роль</label>
      {{! <select
        class='form__select'
        id='role'
        name='role'
        required
      >
        <option
          value=''
          disabled=''
          selected=''
        >Роль</option>
        <option value='user'>Користувач</option>
        <option value='admin'>Адмінистратор</option>
      </select> }}

      <select
        multiple
        class='form__select'
        id='role'
        name='role'
        required
      >
        <option
          value=''
          disabled=''
          selected=''
        >Роль</option>
        <option value='user'>Користувач</option>
        <option value='admin'>Адмінистратор</option>
      </select>

    </div>

    <div class='form__group form__group--checkbox'>
      <label for='agree' class='form__label'>Відправляти
        повідомлення на email</label>
      <input
        type='checkbox'
        class='form__input'
        id='agree'
        name='agree'
        required
      />
    </div>

    <button
      class='form__button'
      {{! type='button' }}
      type='submit'
    ><span>Зареєструватися</span></button>

    <div id='outer'>
      <div id='inner'>
        Click me!
      </div>
    </div>
  </form>

</page>

